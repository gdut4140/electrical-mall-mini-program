/*每个页面公共css */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F8F8F8;
}
.header {
  background-color: #fff;
  padding: 10px;
  padding-bottom: 0;
}
.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 10px;
  padding: 0 10px;
  box-sizing: border-box;
}
.search-box .search-input-wrapper {
  position: relative;
  flex: 1;
  margin-right: 10px;
}
.search-box .search-input-wrapper .search-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
}
.search-box .search-input-wrapper input {
  width: 100%;
  height: 36px;
  line-height: 36px;
  background-color: #f2f2f2;
  border-radius: 18px;
  padding: 0 14px;
  padding-left: 38px;
  box-sizing: border-box;
  border: 1px solid #e9e9e9;
  font-size: 14px;
  color: #333;
}
.search-box .filter-btn {
  color: #666;
  display: flex;
  align-items: center;
}
.category-scroll {
  width: 100%;
  white-space: nowrap;
  margin-bottom: 10px;
}
.category-scroll .category-list {
  display: flex;
  flex-direction: row;
}
.category-scroll .category-list .category-item {
  display: inline-block;
  padding: 5px 15px;
  margin-right: 10px;
  background-color: #F5F5F5;
  border-radius: 15px;
  font-size: 14px;
  color: #333;
}
.category-scroll .category-list .category-item.active {
  background-color: #EBF2FE;
  color: #007AFF;
  font-weight: bold;
}
.sort-bar {
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
}
.sort-bar .sort-item {
  font-size: 14px;
  color: #333;
  display: flex;
  align-items: center;
  gap: 2px;
}
.sort-bar .sort-item.active {
  color: #007AFF;
  border-bottom: 2px solid #007AFF;
  padding-bottom: 5px;
  font-weight: bold;
}
.sort-bar .sort-item .icons {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 20px;
  margin-left: 2px;
}
.product-list {
  flex: 1;
  width: 100%;
  /* 确保列表占满全屏 */
  box-sizing: border-box;
  /* 关键：确保 padding 不会撑大容器宽度 */
  padding: 10px 16px;
}
.product-card {
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 15px;
  width: 100%;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}
.product-card .product-image-placeholder {
  height: 180px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.product-card .product-image-placeholder .placeholder-icon {
  display: flex;
  gap: 15px;
  opacity: 0.8;
}
.product-card .product-info {
  padding: 15px;
}
.product-card .product-info .product-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  display: block;
}
.product-card .product-info .product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-card .product-info .product-bottom .product-price {
  font-size: 20px;
  color: #FF4400;
  font-weight: bold;
}
.product-card .product-info .product-bottom .buy-btn {
  background-color: #2979FF;
  color: #fff;
  font-size: 12px;
  padding: 0 20px;
  border-radius: 20px;
  margin: 0;
  line-height: 2.4;
}
.product-card .product-info .product-bottom .buy-btn::after {
  border: none;
}
